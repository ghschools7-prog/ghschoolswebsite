.top-bar {
  background: #000;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 20px;
  font-size: 14px;
  flex-wrap: nowrap;
  position: relative;
  user-select: none;
}

.top-left {
  display: flex;
  align-items: center;
  gap: 30px;
}

.donate-link a {
  color: #f1f1f0;
  background-color: #ff0505;
  padding: 8px 14px;
  border-radius: 6px;
  font-weight: 700;
  text-decoration: none;
  transition: background-color 0.3s ease;
}
.donate-link a:hover {
