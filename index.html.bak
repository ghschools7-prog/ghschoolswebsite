  color: #fbf8f8;
}

/* Show the top-bar Student Portal on desktop; hide it on small screens to avoid duplication with the mobile overlay */
.student-portal-top { display: inline-block !important; }

.hamburger {
  display: none;
  font-size: 28px;
  cursor: pointer;
  user-select: none;
}

.top-right {
  display: flex;
  align-items: center;
  gap: 30px;
  font-size: 13px;
  flex-wrap: nowrap;
}

.social-icons a {
  color: white;
  font-size: 18px;
  margin-right: 12px;
  text-decoration: none;
  transition: color 0.3s;
}
.social-icons a:hover {
  color: #f1c40f;
}

.contact-info {
  display: flex;
  gap: 25px;
  white-space: nowrap;
}




.top-login {
  color: #fbfafa;
  background: #f80404;
  padding: 6px 14px;
  border-radius: 6px;
  font-weight: 700;
  text-decoration: none;
  transition: background-color 0.3s ease;
  white-space: nowrap;
}
