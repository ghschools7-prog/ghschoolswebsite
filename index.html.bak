/* Responsive Styles */
@media (max-width: 860px) {
  /* mobile: turn nav into a full-screen orange overlay that slides up from bottom */
  .nav-container {
    position: fixed;
    inset: 0; /* top:0; right:0; bottom:0; left:0 */
    z-index: 2000;
    pointer-events: none; /* enable only when overlay is visible */
  }

  /* enable pointer events for the entire nav container only when open so the close button is clickable */
  #site-nav.open {
    pointer-events: auto;
  }

  .nav-links {
    display: flex !important;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    background: linear-gradient(180deg, #ff8a00 0%, #ff5a00 100%);
    color: white;
    width: 100%;
    height: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    padding-top: 88px; /* leave space for close/hamburger */
    transform: translateY(100%);
    transition: transform 360ms cubic-bezier(.2,.9,.3,1);
    box-shadow: 0 -8px 32px rgba(0,0,0,0.35);
    pointer-events: auto;
  }

  .nav-links.show {
    transform: translateY(0);
  }

  /* Animated, large, tappable links inside the orange overlay */
  .nav-links > .nav-item,
  .nav-links > a {
    width: 100%;
    display: block;
    text-align: center;
    padding: 18px 24px;
    box-sizing: border-box;
    opacity: 0;
    transform: translateY(18px) scale(0.98);
    animation: navItemIn 420ms cubic-bezier(.2,.9,.3,1) forwards;
    color: #fff !important;
    font-size: 18px;
    font-weight: 700;
    text-decoration: none;
    letter-spacing: 0.6px;
  }

  /* Staggered delays so items appear in sequence when overlay opens */
  .nav-links.show > :nth-child(1) { animation-delay: 0ms; }
  .nav-links.show > :nth-child(2) { animation-delay: 60ms; }
  .nav-links.show > :nth-child(3) { animation-delay: 120ms; }
  .nav-links.show > :nth-child(4) { animation-delay: 180ms; }
  .nav-links.show > :nth-child(5) { animation-delay: 240ms; }
  .nav-links.show > :nth-child(6) { animation-delay: 300ms; }
  .nav-links.show > :nth-child(7) { animation-delay: 360ms; }

  /* dropdown links use dark text when their background is light */
  .nav-links > .nav-item > .dropdown a,
  .dropdown a {
    color: #000 !important;
  }

  @keyframes navItemIn {
    to { opacity: 1; transform: translateY(0) scale(1); }
  }

  /* Close button inside overlay */
  .nav-close {
    position: fixed;
    top: 14px;
    right: 16px;
    background: transparent;
    color: #fff;
    border: none;
    font-size: 34px;
    line-height: 1;
    padding: 6px 10px;
    cursor: pointer;
    z-index: 2100;
    text-shadow: 0 2px 6px rgba(0,0,0,0.4);
    display: none; /* hidden by default; shown only when overlay is open */
  }

  /* Show close only when nav is open */
  #site-nav.open .nav-close { display: block; }

  .nav-links > .nav-item a:hover,
  .nav-links > a:hover {
    transform: translateX(6px);
    transition: transform 180ms ease, opacity 180ms ease;
    text-decoration: underline;
  }

  /* Big Student Portal button inside the overlay (prominent CTA) */
  .nav-links .student-portal {
    margin-top: 14px;
    background: #ffffff;
    color: #ff5a00 !important;
    padding: 14px 22px;
    border-radius: 12px;
    font-size: 20px;
    font-weight: 800;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    box-shadow: 0 8px 26px rgba(0,0,0,0.18);
    text-decoration: none;
  }

  /* Hide student portal CTA on desktop; show only on small screens */
  .nav-links .student-portal { display: none !important; }

  @media (max-width: 860px) {
    .nav-links .student-portal { display: inline-flex !important; }
  }

  .nav-links .student-portal i {
    font-size: 1.35em;
  }

  .dropdown {
    position: static;
    border: none;
    box-shadow: none;
    background: #f9f9f9;
    margin-left: 20px;
    width: auto;
  }

  .dropdown a {
    padding: 10px 20px;
    font-size: 14px;
  }

  .hamburger {
    display: block;
    font-size: 26px;
    cursor: pointer;
    margin-left: 80px;
  }

  @media (max-width: 860px) {
  .dropdown a:hover {
    background-color: #d60000 !important;
    color: #fff !important;
  }
}

